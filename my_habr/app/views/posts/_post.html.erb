<table class="table  table-striped table-bordered">
  <tbody>

      <tr><td><h4><%= post.title %></h4>


        <I><%= post.categories_titles %></I><br>
        <%= truncate(post.body, length: 200) %><br>
        <%= link_to 'Читать далее... ', post %>
        <% if user_signed_in? %>
        <% if post.user_id == current_user.id %>
            <br>
            <%= link_to 'Изменить', edit_post_path(post) %> |
            <%= link_to 'Удалить', post, method: :delete %> |
        <% end %>
            <% end %>
            </td></tr>


  </tbody>

</table>