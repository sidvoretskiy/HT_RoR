<table class="table  table-striped table-bordered">
  <tbody>

  <tr>
    <td><h4><%= post.title %></h4>


      <I><%= post.categories_titles %></I><br>
      <%= truncate(post.body, length: 200) %><br>
      <%= link_to 'Читать далее... ', post %>
      <% if user_signed_in? %>
          <% if post.user_id == current_user.id || current_user.admin? %>
              <br>
              <%= link_to 'Изменить', edit_post_path(post) %> |
              <%= link_to 'Удалить', post, method: :delete %> |
              <% if post.published %>
                  <%= link_to 'Отправить в черновики', unpublish_post_path(post), method: :patch %>
              <% else %>
                  <%= link_to 'Опубликовать', publish_post_path(post), method: :patch %>
              <% end %>
              <% if current_user.admin? %>
                  <% if post.published & post.moderated == false%>
                      | <%= link_to 'Отклонить', reject_post_path(post), method: :patch %> |
                      <%= link_to 'Одобрить', approve_post_path(post), method: :patch %>
                  <% end %>
              <% end %>

          <% end %>
      <% end %>
    </td>
  </tr>


  </tbody>

</table>