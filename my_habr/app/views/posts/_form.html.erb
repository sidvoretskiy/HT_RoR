<%= form_for(@post) do |f| %>
 <%= render 'common/errors', object: @post %>


  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
    <div class="field">
      <%= f.label :category_ids %><br>
      <%= f.collection_select :category_ids, Category.all, :id, :name, {}, { multiple: true } %>
    </div>
    <div class="field">
      <%= f.label :published %><br>
      <%= f.check_box :published %>
    </div>
  <div class="actions">
    <%= f.submit t('.submit', action: @post.new_record? ? t('common.create') : t('common.update') ) %>
  </div>
<% end %>
