<h1><%= t('.title')	  %></h1>

<table>
  <thead>
  <tr>
    <th>Название</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>
      <tr>
        <td>
          <%= div_for category do %>
          <%= category.name %>
          <% end  %>
            <%= render 'form', category: category, hidden: true %>
        </td>
        <td><%= link_to t('common.show'), [:admin, category] %></td>
        <td><%= link_to t('common.update'), '#', class: 'edit_category_link', data: { category_id: category.id }%></td>
        <td><%= link_to t('common.back'), [:admin, category], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
  <% end %>


  </tbody>
</table>

<br>

<%= link_to t('common.new'), new_admin_category_path %>
